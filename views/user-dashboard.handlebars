<div class="row">
    <div class='col s12 m4 container center-align'>
        <div class='center-align'>
            <i id='logoIcon' class=" material-icons ">account_circle</i>
        </div>
    </div>
    <div class="col s12 m8 container">
        <div id="sideInfo" class="card hide-on-small-only">
            <div class="card-image waves-effect waves-block waves-light">
                <h4>User Name</h4>
                <p id="author-name">
                    Last game played: (DATE)
                </p>
                <p>
                    Last game status: (WIN/LOSE)
                </p>
                <p>
                    Last game: (GAME NAME)
                </p>
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">Click for detailed stats<i class="material-icons right">more_vert</i></span>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Detailed Stats<i class="material-icons right">close</i></span>
                <p>
                    Wins: (Counter)
                </p>
                <p>
                    Losses: (Counter)
                </p>
                <p>
                    Games played: (Counter)
                </p>
                <p>
                    Avg: (Average)
                </p>
            </div>
        </div>
    </div>
</div> <!-- End row -->

<div class="row center-align">
  <div id="joinGameForm" class="col s12">
    <h4 class="page-header center">Join a Game</h4>
    <form method="post" action="/user">

      <div class="input-field col 4">
        <input id="name" type="text" class="validate" name="name">
        <label>Enter a new Team Name</label>
      </div>

      <div class="row center-align">
        <div class="col 4">
          Enter a game ID:
          <div class="input-field inline">
            <input id="GameId" type="text" class="validate" name="GameId">
            <label for="GameId" data-error="wrong" data-success="right">ID here!</label>
          </div>
        </div>
      </div>

      <!-- <hr /> -->
      <div class="center">
          <button type="submit" class="btn btn-default" id="joinGame">Join Now</button>
      </div>

    </form>
  </div>
</div>
<!-- Custom Script -->
<script src="js/user-dashboard.js" type="text/javascript"></script>
