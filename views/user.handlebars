<div class="row">
    <div class='col s12 m4 container center-align'>
        <div class='center-align'>
            <i id='logoIcon' class=" material-icons ">account_circle</i>
        </div>
    </div>
    <div class="col s12 m8 container">
        <div id="sideInfo" class="card hide-on-small-only">
            <div class="card-image waves-effect waves-block waves-light">
                <h4>User Name</h4>
                <p>
                    Last game played: (DATE)
                </p>
                <p>
                    Last game status: (WIN/LOSE)
                </p>
                <p>
                    Last game: (GAME NAME)
                </p>
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">Click for detailed stats<i class="material-icons right">more_vert</i></span>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Detailed Stats<i class="material-icons right">close</i></span>
                <p>
                    Wins: (Counter)
                </p>
                <p>
                    Losses: (Counter)
                </p>
                <p>
                    Games played: (Counter)
                </p>
                <p>
                    Avg: (Average)
                </p>
            </div>
        </div>
    </div>
</div> <!-- End row -->

<div class="row">
    <div id="joinGameForm" class="col s12">
        <h4 class="page-header center">Join a Game</h4>
        <form method="post" action="/usergame">

          <div class="input-field">

            <input type="text" class="validate">
            <label>Group Name</label>
          </div>

          <div class="input-field">
          <input id="icon_prefix" type="text" class="validate">
          <label class="" for="icon_prefix">Add a player</label>
          <!-- <i class="material-icons ">account_circle</i> -->
          <a class="btn-floating btn-small waves-effect waves-light light blue"><i class="material-icons right-align">add</i></a>
          <br />
          </div>

          <div class="row">
                  <div class="col 12">
                    Search for a team:
                    <div class="input-field inline">
                      <input id="gameId" type="text" class="validate">
                      <label for="gameId" data-error="wrong" data-success="right">Enter your code here!</label>
                    </div>
                  </div>
                </div>

          <!-- <hr /> -->
          <div class="center">
              <button type="submit" class="btn btn-default">Join Now</button>
          </div>

        </form>
    </div>
</div>
